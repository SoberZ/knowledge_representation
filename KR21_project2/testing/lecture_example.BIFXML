<?xml version="1.0" encoding="US-ASCII"?>

<!--Author: Andreas Sauter
    Bayesian network in XMLBIF v0.3 (BayesNet Interchange Format)
 -->

<!-- DTD for the XMLBIF 0.3 format -->
<!DOCTYPE BIF [
	<!ELEMENT BIF ( NETWORK )*>
	      <!ATTLIST BIF VERSION CDATA #REQUIRED>
	<!ELEMENT NETWORK ( NAME, ( PROPERTY | VARIABLE | DEFINITION )* )>
	<!ELEMENT NAME (#PCDATA)>
	<!ELEMENT VARIABLE ( NAME, ( OUTCOME |  PROPERTY )* ) >
	      <!ATTLIST VARIABLE TYPE (nature|decision|utility) "nature">
	<!ELEMENT OUTCOME (#PCDATA)>
	<!ELEMENT DEFINITION ( FOR | GIVEN | TABLE | PROPERTY )* >
	<!ELEMENT FOR (#PCDATA)>
	<!ELEMENT GIVEN (#PCDATA)>
	<!ELEMENT TABLE (#PCDATA)>
	<!ELEMENT PROPERTY (#PCDATA)>
]>

<BIF VERSION="0.3">
<NETWORK>
    <NAME>Lecture Example</NAME>

    <!-- Variables-->
    <VARIABLE TYPE="nature">
        <NAME>Winter?</NAME>
        <OUTCOME>True</OUTCOME>
        <OUTCOME>False</OUTCOME>
    </VARIABLE>
    <VARIABLE TYPE="nature">
        <NAME>Sprinkler?</NAME>
        <OUTCOME>True</OUTCOME>
        <OUTCOME>False</OUTCOME>
    </VARIABLE>
    <VARIABLE TYPE="nature">
        <NAME>Rain?</NAME>
        <OUTCOME>True</OUTCOME>
        <OUTCOME>False</OUTCOME>
    </VARIABLE>
    <VARIABLE TYPE="nature">
        <NAME>Wet Grass?</NAME>
        <OUTCOME>True</OUTCOME>
        <OUTCOME>False</OUTCOME>
    </VARIABLE>
    <VARIABLE TYPE="nature">
        <NAME>Slippery Road?</NAME>
        <OUTCOME>True</OUTCOME>
        <OUTCOME>False</OUTCOME>
    </VARIABLE>

    <!-- PCTs -->
    <DEFINITION>
        <FOR>Winter?</FOR>
        <TABLE>0.4 0.6</TABLE>
    </DEFINITION>
    <DEFINITION>
        <FOR>Sprinkler?</FOR>
        <GIVEN>Winter?</GIVEN>
        <TABLE>0.25 0.75 0.8 0.2</TABLE>
    </DEFINITION>
    <DEFINITION>
        <FOR>Rain?</FOR>
        <GIVEN>Winter?</GIVEN>
        <TABLE>0.9 0.1 0.2 0.8</TABLE>
    </DEFINITION>
    <DEFINITION>
        <FOR>Wet Grass?</FOR>
        <GIVEN>Rain?</GIVEN>
        <GIVEN>Sprinkler?</GIVEN>
        <TABLE>1.0 0.0 0.2 0.8 0.1 0.9 0.05 0.95</TABLE> <!-- Order? Rain?, Sprinkler?, Wet Grass?-->
    </DEFINITION>
    <DEFINITION>
        <FOR>Slippery Road?</FOR>
        <GIVEN>Rain?</GIVEN>
        <TABLE>1.0 0.0 0.3 0.7</TABLE>
    </DEFINITION>
</NETWORK>
</BIF>